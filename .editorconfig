# EditorConfig is awesome: https://editorconfig.org

# Top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown
[*.md]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false

# YAML
[*.yaml]
indent_size = 2
indent_style = space
